#:kivy 1.8

<ArkivRoot>:
    orientation: "vertical"
    size_hint_y: 1
    MyBar:
        id: bar

<Menu>:
    size_hint_x: 1
    hide_root: True
    indent_level: 0

<MyBar>:
    orientation: "vertical"
    size_hint_y: None
    height: "50dp"
    ActionBar:
        ActionView:
            use_separator: True
            ActionPrevious:
                title: "Arkiv"
                with_previous: True
            ActionButton:
                text: "Next"

<Category>:
    #layout: layout
    #BoxLayout:
    #    id: layout
    #    orientation: "vertical"
    #    size_hint_y: None

<CategoryView>:
    carousel: carousel
    BoxLayout:
        orientation: "vertical"
        size_hint_y: 1
        Carousel:
            id: carousel

<CategorySubView>:
    accordion: accordion
    CategoryList:
        id: accordion

<CategoryArticle>:
    label: label
    CategoryArticleLabel:
        id: label

<CategoryArticleLabel>:
    text: "[b]Authors:[/b]\n%s\n[b]Abstract:[/b]\n%s"
    markup: True

<SubCategory>:
    view: view
    size_hint_y: None
    height: "40dp"
    CategoryView:
        id: view
        name: root.text

<CategoryList>:
    orientation: "vertical"
